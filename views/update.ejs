<!-- partials -->

<%- include('partials/header.ejs') %>

<%- include('partials/main_nav.ejs') %>

<%- include('partials/content.ejs') %>

<!-- content -->

<div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
        <form class="form" method="post">
          <div class="form-group">
            <label for="NameTextField">Name</label>
            <input
              type="text"
              class="form-control"
              id="NameTextField"
              placeholder="Name"
              name="Name"
              value="<%= contact.Name %>"
              required
            />
          </div>
  
          <div class="form-group">
            <label for="DeptTextField">Number</label>
            <input
              type="text"
              class="form-control"
              id="AuthorDeptTextField"
              placeholder="Number"
              name="Number"
              value="<%= contact.Number %>"
              required
            />
          </div>
  
          <div class="form-group">
            <label for="SubTextField">Email</label>
            <input
              type="text"
              class="form-control"
              id="SubTextField"
              placeholder="Email"
              name="Email"
              value="<%= contact.Email %>"
              required
            />
          </div>
  
          <button type="submit" class="btn btn-primary">
            <i class="fa fa-check-square-o"></i>Update
          </button>
          <a href="/businesscontactlist" class="btn btn-warning"
            ><i class="fa fa-undo"></i>Cancel</a>

            <a href="/delete/<%= contact._id %>" class="btn btn-warning"
            ><i class="fa fa-undo"></i>Delete</a>


        </form>
      </div>
    </div>
  </div>

<!-- partials -->

<%- include('partials/footer.ejs') %>